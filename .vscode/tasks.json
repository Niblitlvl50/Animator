{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "make",
            "args": [
                "-j8"
            ],
            "options": {
                "cwd": "${workspaceRoot}/build"
            },
            "type": "process",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "label": "clean",
            "command": "make",
            "args": [
                "clean"
            ],
            "options": {
                "cwd": "${workspaceRoot}/build"
            },
            "type": "process",
            "problemMatcher": []
        },
        {
            "label": "cmake",
            "command": "cmake",
            "args": [
                "../"
            ],
            "options": {
                "cwd": "${workspaceRoot}/build"
            },
            "type": "process",
            "problemMatcher": []
        },
        {
            "label": "run",
            "type": "process",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "command": "./bin/animator",
            "args": [
                "res/sprites/cacodemon.sprite"
            ],
            "problemMatcher": []
        },
        {
            "label": "deploy",
            "command": "python",
            "args": [
                "scripts/deploy.py"
            ],
            "problemMatcher": []
        }
    ]
}
